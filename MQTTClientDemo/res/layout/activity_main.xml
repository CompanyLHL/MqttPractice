<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layotu_nav"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="#3faae7"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="电表控制"
            android:textColor="#fff"
            android:textSize="24sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="电表采集"
                android:textColor="#888888"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_state"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dip"
                android:background="@drawable/red"
                android:gravity="center" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="未运行"
                android:textColor="#888888"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layout_switch_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible" >

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="50dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/btn_off"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/title_btn_left"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="off"
                        android:textColor="#888888"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/btn_on"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/title_btn_right"
                        android:button="@null"
                        android:gravity="center"
                        android:text="on"
                        android:textColor="#888888"
                        android:textSize="22sp" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginTop="20dip"
                android:background="#888888" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="电表数据控制"
                android:textColor="#888888"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_state_two"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dip"
                android:background="@drawable/red"
                android:gravity="center" />

            <TextView
                android:id="@+id/text_status_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="未运行"
                android:textColor="#888888"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layout_switch_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible" >

                <RadioGroup
                    android:id="@+id/radioGroup_two"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="50dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/btn_off_two"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/title_btn_left"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="off"
                        android:textColor="#888888"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/btn_on_two"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/title_btn_right"
                        android:button="@null"
                        android:gravity="center"
                        android:text="on"
                        android:textColor="#888888"
                        android:textSize="22sp" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginTop="20dip"
                android:background="#888888" />

            <TextView
                android:id="@+id/text_display_dl_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:ellipsize="marquee"
                android:gravity="left|center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="当前无电量数据"
                android:textColor="#000"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/text_display_dl_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:ellipsize="marquee"
                android:gravity="left|center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="当前无电量数据"
                android:textColor="#000"
                android:textSize="20dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_display_dy_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:ellipsize="marquee"
                android:gravity="left|center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="当前无电压数据"
                android:textColor="#000"
                android:textSize="20dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_display_dy_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:ellipsize="marquee"
                android:gravity="left|center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="当前无电压数据"
                android:textColor="#000"
                android:textSize="20dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_display_agl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:ellipsize="marquee"
                android:gravity="left|center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="总功率因数:"
                android:textColor="#000"
                android:textSize="20dip"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/text_ip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_ddms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_weight="4"
                    android:text=":1883"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/text_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:focusable="false"
                android:text="status/meter/138000121397"
                android:textColor="#000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/image_pub"
                    android:gravity="center"
                    android:text="连接服务"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/image_pub"
                    android:gravity="center"
                    android:text="订阅消息"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>